<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pedro.cnc_calc.Tabela_rosca"
    android:background="@android:color/holo_red_light">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout3"
        android:background="@android:color/background_light">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/tv_tamanho"
            android:id="@+id/tv_tamanho"
            android:layout_weight="2"
            android:textSize="25sp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:gravity="center" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/et_M"
            android:layout_weight="4"
            android:inputType="number"
            android:numeric="integer"
            android:maxLength="2"
            android:layout_marginRight="30dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_metrica"
            android:id="@+id/tv_metrica"
            android:gravity="center"
            android:textSize="20sp"
            android:background="#fffcff00"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4"
        android:layout_marginTop="5dp"
        android:background="#ff59afff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:background="#ffeeff32" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:id="@+id/linha5"
            android:background="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/tv_fina"
            android:textSize="18sp"
            android:background="#ffeeff32" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:id="@+id/linha6"
            android:background="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/tv_frossa"
            android:textSize="18sp"
            android:background="#ffeeff32" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout9" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/linha_horizontal_2"
            android:background="#000" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_passo"
            android:id="@+id/textView2"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            android:background="#ffeeff96" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:id="@+id/linha1"
            android:background="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_fina_M"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            android:background="#ffeeff96" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:id="@+id/linha3"
            android:background="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_grossa_M"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            android:background="#ffeeff96" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout7">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/linha_horizontal_1"
            android:background="#000" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout6"
        android:layout_below="@+id/linearLayout7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_broca"
            android:id="@+id/textView3"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:background="#ffeeff32" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:id="@+id/linha2"
            android:background="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_externo_fina_M"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:background="#ffeeff32" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:id="@+id/linha4"
            android:background="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_externo_grossa_M"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:background="#ffeeff32" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10sp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2.1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tv_whithworth"
                android:id="@+id/tv_whithworth"
                android:gravity="center"
                android:textSize="20sp"
                android:background="#ff61d600"
                android:autoText="false"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2.1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout4.1"
            android:layout_marginTop="5dp"
            android:background="#ff59afff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18sp"
                android:background="#ff81d63e" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:id="@+id/linha5"
                android:background="#000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/tv_fina"
                android:textSize="18sp"
                android:background="#ff81d63e" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:id="@+id/linha6"
                android:background="#000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/tv_frossa"
                android:textSize="18sp"
                android:background="#ff81d63e" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout4.1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout10" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/textView6"
                android:background="#000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout5.1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tv_passo"
                android:id="@+id/textView2"
                android:layout_weight="1"
                android:textSize="18sp"
                android:gravity="center"
                android:background="#ff78ff4c" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:id="@+id/linha1"
                android:background="#000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_fina_Ww"
                android:layout_weight="1"
                android:textSize="18sp"
                android:gravity="center"
                android:background="#ff78ff4c" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:id="@+id/linha3"
                android:background="#000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_grossa_Ww"
                android:layout_weight="1"
                android:textSize="18sp"
                android:gravity="center"
                android:background="#ff78ff4c" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout5.1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout7.1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/linha_horizontal_1"
                android:background="#000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout6.1"
            android:layout_below="@+id/linearLayout7.1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tv_broca"
                android:id="@+id/textView3"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18sp"
                android:background="#ff81d63e" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:id="@+id/linha2"
                android:background="#000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_externo_fina_Ww"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18sp"
                android:background="#ff81d63e" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:id="@+id/linha4"
                android:background="#000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_externo_grossa_Ww"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18sp"
                android:background="#ff81d63e" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
